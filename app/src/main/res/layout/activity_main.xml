<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mortgagePrincipalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mortgage Principal Amount"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/interestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Interest Rate (%)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/amortizationPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amortization Period (years)"
        android:inputType="number"/>

    <Button
        android:id="@+id/calculatePayments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Payments"/>

    <TextView
        android:id="@+id/monthlyPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Monthly Payment: "
        android:textSize="18sp"/>
</LinearLayout>
